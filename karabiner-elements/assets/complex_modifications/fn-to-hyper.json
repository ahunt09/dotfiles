{
  "title": "Change fn to \"hyper\" key (command+control+option+shift) with specific key combinations",
  "rules": [
    {
      "description": "Change fn + b to \"hyper\" + b",
      "from": {
        "key_code": "b",
        "modifiers": {
          "mandatory": [
            "fn"
          ],
          "optional": [
            "any"
          ]
        }
      },
      "to": [
        {
          "key_code": "b",
          "modifiers": [
            "left_shift",
            "left_command",
            "left_control",
            "left_option"
          ]
        }
      ],
      "type": "basic"
    }, {
      "manipulators": [
        {
          "description": "Change fn + a to \"hyper\" + a",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": [
                "left_shift",
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
