[include]
    path = projects/.git-config-work
[alias]
    st  = status
    # see oh-my-zsh for more aliases

	# make `gitk` usable like other commands `git k`
	k = !gitk
[branch]
    # new branches track parent branch regardless of being local or on server
    #autosetupmerge = always
#	autosetuprebase = tracking
	autosetuprebase = always
[core]
	autocrlf = false
	editor = /usr/local/bin/vim
[push]
	default = tracking
#
# Colorize command outputs
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[diff]
	renames = true
[mergetool]
	keepBackup = true
[http]
	sslVerify = true
