# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=100000
SAVEHIST=1000000
setopt appendhistory extendedglob nomatch
unsetopt autocd beep
bindkey -v

# End of lines configured by zsh-newuser-install
# The following lines were added by compinstall
zstyle :compinstall filename '/home/andrew/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

# set terminal to 256 colors
export TERM=xterm-256color

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

if [ -d $HOME/.local/bin ]; then
	PATH="$HOME/.local/bin:$PATH"
fi

# add Haskell cabal to path
if [ -d $HOME/.cabal/bin ]; then
	PATH="$HOME/.cabal/bin:$PATH"
fi

#BEING ANTIGEN
source $HOME/source/github/antigen/antigen.zsh

#aliases
alias area="gnome-screenshot -a"

alias logout="i3lock -e -c 000000"
alias stx="startx &> ~/.xlog 2>~/.xlog_err"
alias ll="ls -al"
alias l="ls -l"
alias google-chrome="google-chrome --force-device-scale-factor=2"

# Load the oh-my-zsh's library.
antigen use oh-my-zsh

# Bundles from the default repo (robbyrussell's oh-my-zsh).
antigen bundle git
#antigen bundle heroku
antigen bundle history-substring-search

antigen bundle npm
antigen bundle node
antigen bundle vagrant
#antigen bundle command-not-found

# Syntax highlighting bundle.
antigen bundle zsh-users/zsh-syntax-highlighting

# Load the theme.
antigen theme agnoster

# Tell antigen that you're done.
antigen apply
#END ANTIGEN

#autojump
. /usr/share/autojump/autojump.zsh

export NVM_DIR="/home/andrew/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

