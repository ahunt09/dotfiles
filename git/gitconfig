[include]
	path = projects/.git-config-work
[alias]
	st  = status
	l  = !git pull
	b  = !git branch
	co = !git checkout
	cm = !git checkout master
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	ln = log --graph --pretty=format:'%Cgreen%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[branch]
	autosetuprebase = always
[core]
	autocrlf = false
	editor = /usr/local/bin/nvim
	excludesfile = /Users/andrew/.gitignore_global
[push]
	default = simple
[merge]
	ff = no

# Colorize command outputs
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	renames = true
[mergetool]
	keepBackup = true
[http]
	sslVerify = true
[color "diff"]
	;frag = cyan
	;new = green
	; sources my email address and
	; other [user] config
