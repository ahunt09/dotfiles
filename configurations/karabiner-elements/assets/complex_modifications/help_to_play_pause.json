{
  "title": "Bind help key",
  "rules": [
    {
      "description": "Use help key to play/pause",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "home"
          },
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ]
        }, {
          "type": "basic",
          "from": {
            "key_code": "help"
          },
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ]
        }
      ]
    }
  ]
}

