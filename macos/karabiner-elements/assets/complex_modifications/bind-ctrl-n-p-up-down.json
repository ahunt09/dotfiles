{
  "title": "Ctrl + p/n : <Up>/<Down>",
  "rules": [
    {
      "description": "Ctrl + p/n : <Up>/<Down>",
      "manipulators": [
        {
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": "any"
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": "any"
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
